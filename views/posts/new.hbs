<form action="/posts" method="post">
    <div>
        <h3> New Post Here</h3>
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title">
        </div>
        <div>
            <label for="description">Body</label>
            <textarea name="body" id="description"></textarea>
        </div>
        <div>
            <button>Submit</button>
        </div>
    </div>
</form>
