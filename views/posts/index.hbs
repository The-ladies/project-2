<h2>All the posts </h2>

{{#each posts}}
    <h3><a href='/posts/{{id}}'>{{title}}</a></h3>
    <p>{{body}}</p>

    <div>
        <small>Created at: {{createdAt}}</small>
    </div>
    <div>
        <small>Author: {{creatorId.username}}</small>
    </div>
    <div>
        <small>{{text}}</small>
    </div>
    <hr>
{{/each}}
